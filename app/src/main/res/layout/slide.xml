<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <RelativeLayout
        android:id="@+id/flip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3e4250">

            <android.support.percent.PercentRelativeLayout
                android:id="@+id/bgView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#3e4250"
                android:gravity="right"
                android:orientation="horizontal"
                android:visibility="gone">


                <LinearLayout
                    android:id="@+id/crash_conta"
                    android:layout_width="@dimen/menuwidth"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:background="#82000000"
                    android:orientation="horizontal"
                    app:layout_heightPercent="10%">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:src="@drawable/crashcaicon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
                        android:id="@+id/menucrush"
                        android:text="ავარიული გამოძახება"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/menutextsize" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="6dp"
                            android:id="@+id/lurjixazi"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:background="#0693c2" />
                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/about_us"
                    android:layout_width="@dimen/menuwidth"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/crash_conta"
                    android:orientation="horizontal"
                    app:layout_heightPercent="10%">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/aboutus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:id="@+id/menuabout"
                        android:text="ჩვენს შესახებ"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/menutextsize" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="6dp"
                            android:id="@+id/lurjixazi_about"
                            android:visibility="gone"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:background="#0693c2" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lift_savefty"
                    android:layout_width="@dimen/menuwidth"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/about_us"
                    android:orientation="horizontal"
                    app:layout_heightPercent="10%">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/savefty" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:id="@+id/menusave"
                        android:text="ლიფტის უსაფრთხოება"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/menutextsize" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="6dp"
                            android:id="@+id/lurjixazi_safety"
                            android:visibility="gone"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:background="#0693c2" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/how_pay"
                    android:layout_width="@dimen/menuwidth"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lift_savefty"
                    android:orientation="horizontal"
                    app:layout_heightPercent="10%">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/howtopay" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:gravity="left"
                        android:text="როგორ გადავიხადო"
                        android:id="@+id/menupay"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/menutextsize" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="6dp"
                            android:id="@+id/lurjixazi_pay"
                            android:visibility="gone"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:background="#0693c2" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/partners"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/how_pay"
                    android:orientation="horizontal"
                    app:layout_heightPercent="10%">


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/partners" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:id="@+id/menupartner"
                        android:gravity="left"
                        android:text="პარტნიორები"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/menutextsize" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <View
                            android:layout_width="6dp"
                            android:id="@+id/lurjixazi_partners"
                            android:visibility="gone"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:background="#0693c2" />
                    </RelativeLayout>
                </LinearLayout>


            </android.support.percent.PercentRelativeLayout>

            <RelativeLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/liftback"
                android:visibility="visible">
                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView1"
                    android:src="@drawable/liftback"
                    android:scaleType="fitCenter"
                    app:riv_corner_radius="7dip"
                    app:riv_border_width="2dip"
                    app:riv_border_color="#000"
                    android:visibility="gone"
                    app:riv_mutate_background="true"
                    app:riv_oval="false"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


                <RelativeLayout
                    android:id="@+id/humburger_main"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/humburger_3"
                        android:layout_width="@dimen/hamburgerbuttonsize"
                        android:layout_height="@dimen/heigofham"
                        android:background="#ffff"
                        android:orientation="horizontal" />


                    <View
                        android:id="@+id/humburger_1"
                        android:layout_width="@dimen/hamburgerbuttonsize"
                        android:layout_height="@dimen/heigofham"
                        android:layout_below="@+id/humburger_3"
                        android:layout_marginTop="@dimen/hamburgermargin"
                        android:background="#ffff"
                        android:orientation="horizontal" />

                    <View
                        android:id="@+id/humburger_2"
                        android:layout_width="@dimen/hamburgerbuttonsize"
                        android:layout_height="@dimen/heigofham"
                        android:layout_below="@+id/humburger_3"
                        android:layout_marginTop="@dimen/hamburgermargin"
                        android:background="#ffff"
                        android:orientation="horizontal" />

                    <View
                        android:id="@+id/humburger_4"
                        android:layout_width="@dimen/hamburgerbuttonsize"
                        android:layout_height="@dimen/heigofham"
                        android:layout_below="@+id/humburger_2"
                        android:layout_marginTop="@dimen/hamburgermargin"
                        android:background="#ffff"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/RecyclerView"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:background="#00ff0000"
                    android:orientation="horizontal"
                    android:scrollbars="vertical">

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/activity_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    tools:context="ge.idevelopers.Lifti.app.MainActivity"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/imageView1"
                    android:layout_toEndOf="@+id/imageView1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="@dimen/logomargin"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="@dimen/logoSize"
                            android:layout_height="@dimen/logoSizeH"
                            android:background="@drawable/logocopy"
                            android:padding="2dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/liftisnomeri"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="შეიყვანეთ ლიფტის ნომერი"
                            android:textColor="#FFF"
                            android:textSize="@dimen/maintextsize" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llInput"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/paddingedittext"
                        android:layout_weight="0.9"
                        android:background="@drawable/textbackgroun"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivCal2"
                            android:layout_width="@dimen/images"
                            android:layout_height="@dimen/images"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/lifticon" />

                        <EditText
                            android:id="@+id/etInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:layout_weight="0.9"
                            android:background="@null"
                            android:gravity="start"
                            android:inputType="numberSigned"
                            android:maxLength="3"
                            android:hint="Lift Number"
                            android:textColorHint="#c8c7bebe"
                            android:layout_marginLeft="5dp"
                            android:paddingLeft="2dp"
                            android:textColor="#000"
                            android:textSize="20dp" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/sheiyvanetnomeri"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="შეიყვანეთ თქვენი ნომერი"
                            android:textColor="#FFF"
                            android:textSize="@dimen/maintextsize" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llInputNumber"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/paddingedittext"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.9"
                        android:background="@drawable/textbackgroun"
                        android:gravity="center"
                        android:layoutMode="opticalBounds"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivCal"
                            android:layout_width="@dimen/images"
                            android:layout_height="@dimen/images"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/phoneicon" />

                        <EditText
                            android:id="@+id/etInputNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:gravity="start"
                            android:inputType="numberSigned"
                            android:maxLength="9"
                            android:textColorHint="#c8c7bebe"
                            android:paddingLeft="2dp"
                            android:hint="Your Number"
                            android:layout_marginLeft="5dp"
                            android:paddingRight="35dp"
                            android:textColor="#000"
                            android:textSize="20dp">

                            <requestFocus />
                        </EditText>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/gad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/gamodzxebismizezi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="გამოძახების მიზეზი"
                            android:textColor="#FFF"
                            android:textSize="@dimen/maintextsize" />
                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/mizezi"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <ge.idevelopers.Lifti.app.slider.Slider
                            android:id="@+id/asd"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            app:BackgroundColor="#ffffff"
                            app:BackgroundPadding="1dp"
                            app:ProgressColor="#0893c2"
                            app:Radius="25dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4.7"
                        android:gravity="center"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/btnGamodzaxeba"
                            android:layout_width="@dimen/gamodzexbaBtn"
                            android:layout_height="@dimen/gamodzexbaBtnHeight"
                            android:background="@drawable/callservicbtn"
                            android:gravity="center"
                            android:onClick="gamodzaxeba"
                            android:text="გამოძახება"
                            android:textSize="@dimen/gamodzexebabuttontext"
                            android:textColor="#FFF" />

                    </RelativeLayout>
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>
