<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/DrawerLayout2"
    android:layout_width="match_parent"
    android:background="#3e4250"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#3e4250"
            android:gravity="right"
            android:id="@+id/bgView2"
            android:visibility="gone"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/crash_conta_about"
                app:layout_heightPercent="10%"
                android:layout_width="@dimen/menuwidth1"
                android:layout_marginTop="@dimen/menumargintop"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/crashcaicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:id="@+id/menucrush1"
                    android:layout_marginLeft="10dp"
                    android:text="ავარიული გამოძახება"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/menutextsize" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/lurjixazi3_crush"
                        android:layout_width="6dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="#0693c2"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_us_about"
                android:layout_width="@dimen/menuwidth1"
                android:layout_height="wrap_content"
                android:layout_below="@id/crash_conta_about"
                android:orientation="horizontal"
                android:background="#82000000"
                app:layout_heightPercent="10%">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="30dp"
                    android:src="@drawable/aboutus" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:id="@+id/menuabout1"
                    android:text="ჩვენს შესახებ"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/menutextsize" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/about_blue"
                        android:layout_width="6dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="#0693c2"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lift_savefty_about"
                android:layout_width="@dimen/menuwidth1"
                app:layout_heightPercent="10%"
                android:layout_height="wrap_content"
                android:layout_below="@+id/about_us_about"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="30dp"
                    android:src="@drawable/savefty" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:id="@+id/menusave1"
                    android:text="ლიფტის უსაფრთხოება"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/menutextsize" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/lurjixazi3_savefty"
                        android:layout_width="6dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="#0693c2"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/how_pay_about"
                app:layout_heightPercent="10%"
                android:layout_width="@dimen/menuwidth1"
                android:layout_height="wrap_content"
                android:layout_below="@id/lift_savefty_about"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/howtopay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:id="@+id/menupay1"
                    android:layout_marginLeft="10dp"
                    android:text="როგორ გადავიხადო"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/menutextsize" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/lurjixazi3_pay"
                        android:layout_width="6dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="#0693c2"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/partners_about"
                android:layout_width="@dimen/menuwidth1"
                app:layout_heightPercent="10%"
                android:layout_height="wrap_content"
                android:layout_below="@+id/how_pay_about"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/partners" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:id="@+id/menupartner1"
                    android:text="პარტნიორები"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/menutextsize" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <View
                        android:id="@+id/lurjixazi3_partners"
                        android:layout_width="6dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:background="#0693c2"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>


        </android.support.percent.PercentRelativeLayout>

        <RelativeLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#172027"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/logoSize"
                android:layout_height="@dimen/logoSizeH"
                android:src="@drawable/logocopy"
                android:layout_marginTop="25dp"
                android:id="@+id/logoimage"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/logoimage">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/activity_test_fab1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context="ge.idevelopers.Lifti.app.AboutUs">



                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollabout"
    android:orientation="vertical">
                    <ImageView
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:scrollbars="vertical"
                        android:src="@drawable/about_pirveli"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/abouttextsize" />
                    <ImageView
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:scrollbars="vertical"
                        android:src="@drawable/about_meore"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/abouttextsize" />
                    <ImageView
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:scrollbars="vertical"
                        android:src="@drawable/about_mesame"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/aboutsizecheck" />
                    <ImageView
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:scrollbars="vertical"
                        android:src="@drawable/about_meotxe"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/aboutSizecheckedlast" />
                    <ImageView
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:scrollbars="vertical"
                        android:src="@drawable/about_mexute"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/abouttextsizelast" />
</LinearLayout>
                </ScrollView>
            </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/humburger_main2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_alignParentRight="true">

                <LinearLayout
                    android:id="@+id/humburger_32"
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:background="#ffff"
                    android:orientation="horizontal" />


                <LinearLayout
                    android:id="@+id/humburger_12"
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:layout_below="@+id/humburger_32"
                    android:layout_marginTop="5dp"
                    android:background="#ffff"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/humburger_22"
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:layout_below="@+id/humburger_32"
                    android:layout_marginTop="5dp"
                    android:background="#ffff"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:id="@+id/humburger_42"
                    android:layout_width="30dp"
                    android:layout_height="3dp"
                    android:layout_below="@+id/humburger_22"
                    android:layout_marginTop="5dp"
                    android:background="#ffff"
                    android:orientation="horizontal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
         <!--   <LinearLayout
                android:id="@+id/RecyclerView2"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="#00ff0000"
                android:orientation="horizontal"
                android:scrollbars="vertical">

            </LinearLayout>-->

            <!--kodi-->


        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>

